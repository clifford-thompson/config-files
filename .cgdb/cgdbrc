highlight PreProc ctermfg=DarkMagenta cterm=normal
highlight Constant ctermfg=DarkGreen cterm=normal
highlight LineHighlight ctermbg=DarkGreen ctermfg=Black cterm=normal
highlight SelectedLineNr ctermfg=Black ctermbg=DarkCyan cterm=normal
